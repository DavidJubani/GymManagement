@model FinalProjectGym_management.ViewModels.MembersVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
}


<div class="container">
    <h1 class="text-center">Create Member</h1>
    <div class="row justify-content-md-center">
        <div class="col-md-8">
            @using (Html.BeginForm())
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" required />
                    <div class="invalid-feedback">
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" required />
                    <div class="invalid-feedback">
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Birthday" class="form-label"> Birthday</label>
                    <input asp-for="Birthday" class="form-control" required />
                    <div class="invalid-feedback">
                        @Html.ValidationMessageFor(model => model.Birthday)
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="IdCardNumber" class="form-label"> Id Card Number</label>
                    <input asp-for="IdCardNumber" class="form-control" required />
                    <div class="invalid-feedback">
                        @Html.ValidationMessageFor(model => model.IdCardNumber)
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"> E mail</label>
                    <input asp-for="Email" class="form-control" required />
                    <div class="invalid-feedback">
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>

 
                <div class="mb-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            }
        </div>
    </div>
</div>
