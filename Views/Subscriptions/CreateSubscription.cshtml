@model FinalProjectGym_management.Models.Subscriptions

@{
    ViewData["Title"] = "CreateSubscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<h1>Create Subscription</h1>
@using (Html.BeginForm())
{
<div class="form-group">
    @Html.LabelFor(model => model.Code)
    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Code" } })
    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Description" } })
    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.NumberOfMonths)
    @Html.EditorFor(model => model.NumberOfMonths, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Number Of Months" } })
    @Html.ValidationMessageFor(model => model.NumberOfMonths, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.WeekFrequency)
    @Html.EditorFor(model => model.WeekFrequency, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Week Frequency" } })
    @Html.ValidationMessageFor(model => model.WeekFrequency, "", new { @class = "text-danger" })
</div>


<div class="form-group">
    @Html.LabelFor(model => model.TotalPrice)
    @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Total Price" } })
    @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.IsDeleted)
    @Html.CheckBoxFor(model => model.IsDeleted, new { @class = "form-check-input" })
    @Html.ValidationMessageFor(model => model.IsDeleted, "", new { @class = "text-danger" })
</div>

<button type="submit" class="btn btn-primary">Save</button>
}