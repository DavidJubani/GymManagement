@model FinalProjectGym_management.ViewModels.SubscriptionsVM

@{
    ViewData["Title"] = "CreateSubscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @section Styles {
        <style>
            body {
                margin: 0;
                padding: 0;
                background-color: #f8f9fa;
            }

            .background-image-container {
                background-image: url('/images/slider-bg.jpg'); /* Update with the actual path to your image */
                background-size: cover;
                height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .container {
                background-color: rgba(255, 255, 255, 0.8);
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            h1.text-center {
                color: #333;
            }

            form {
                max-width: 600px;
                margin: auto;
            }

            .form-label {
                font-weight: bold;
                color: #333;
            }

            .form-control {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }

            .invalid-feedback {
                color: #dc3545;
            }

            .btn-primary {
                background-color: #007bff;
                color: #fff;
                border: none;
            }

                .btn-primary:hover {
                    background-color: #0056b3;
                }

        </style>
    }
}

    <div class="container">
        <h1 class="text-center">Create Subscription</h1>
        <div class="row justify-content-md-center">
            <div class="col-md-8">
                @using (Html.BeginForm())
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Code" class="form-label">Code</label>
                        <input asp-for="Code" class="form-control" placeholder="Enter Code" />
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(model => model.Code)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Enter Description" />
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NumberOfMonths" class="form-label">Number of Months</label>
                        <input asp-for="NumberOfMonths" class="form-control" placeholder="Enter Number of Months" />
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(model => model.NumberOfMonths)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WeekFrequency" class="form-label">Week Frequency</label>
                        <input asp-for="WeekFrequency" class="form-control" placeholder="Enter Week Frequency" />
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(model => model.WeekFrequency)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TotalPrice" class="form-label">Total Price</label>
                        <input asp-for="TotalPrice" class="form-control" placeholder="Enter Total Price" />
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(model => model.TotalPrice)
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                }
            </div>
        </div>
    </div>

