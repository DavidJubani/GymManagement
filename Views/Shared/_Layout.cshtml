<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalProjectGym_management</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalProjectGym_management.styles.css" asp-append-version="true" />

    <!-- Optional Styles Section -->
    @RenderSection("Styles", required: false)

    <style>
        body {
            font-family: 'Arial', sans-serif; /* Set a consistent font family */
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333; /* Set header background color */
            color: #fff; /* Set header text color */
        }

        .navbar-nav a {
            color: #fff; /* Set navigation link color */
        }

            .navbar-nav a:hover {
                color: #ddd; /* Set navigation link hover color */
            }

        main {
            padding: 20px; /* Add padding for better readability */
        }

     
    </style>

 
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gym Members Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Add your navigation links here -->
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- Optional Scripts Section -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
